#!/bin/bash
cd $OPENSHIFT_REPO_DIR
nohup java -Xms512m -Xmx512m -jar target/*.war --spring.profiles.active=prod,openshift --metrics.jmx.enabled=false --spring.datasource.jmx-enabled=false --spring.jmx.enabled=false --management.security.enabled=false --endpoints.jmx.enabled=false --server.port=${OPENSHIFT_DIY_PORT} --server.address=${OPENSHIFT_DIY_IP} --spring.datasource.openshift-url=$OPENSHIFT_POSTGRESQL_DB_URL --spring.datasource.openshift-databaseName=$OPENSHIFT_APP_NAME &